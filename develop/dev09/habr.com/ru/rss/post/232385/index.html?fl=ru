URI = scheme &quot;:&quot; hier-part [ &quot;?&quot; query ] [ &quot;#&quot; fragment ]<br/>
relative-ref = relative-part [ &quot;?&quot; query ] [ &quot;#&quot; fragment ]</blockquote><br/>
